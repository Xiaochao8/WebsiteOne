<h4 class="card-title"><%= hangout.event_link %></h4>
<div class='row' data-event-instance-id=<%=hangout.id%>>
  <div class="col-xs-6 hg-avatar">
    <%= render 'users/user_avatar', user: hangout.host %>
  </div>
  <div class="col-xs-6">
      <div> <%= link_to Sgtn.t('event_instances.Join', 'views'), hangout.hangout_url,
        { class: "btn-hg-join #{hangout.live? ? '' : 'disable'}" } %>
      </div>
    <% if watchable? hangout %>
      <div><%= link_to Sgtn.t('event_instances.Watch', 'views'), hangout.video_url, { class: 'btn-hg-watch' } %></div>
    <% else %>
      <div><%= link_to Sgtn.t('event_instances.Watch', 'views'), '/membership-plans', { class: 'btn-hg-watch' } %></div>
    <% end %>
  </div>
</div>
